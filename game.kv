<CosmicAggressorsGame>:
    id: game
    size: "600", "400"
    canvas:
    PlayerShip:
        id: player_ship
    Aggressors:
        id: aggressors

<PlayerShip>:
    size: 0.05, 0.05
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<PlayerMissile>:
    size: 0.1, 0.1
    canvas.before:
        Ellipse:
            pos: self.pos
            size: self.size

<Aggressor>:
    size: 0.1, 0.1
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
